{
  "name": "ai-devtools-vscode",
  "displayName": "AI DevTools",
  "description": "View and debug Claude Code and Codex conversations",
  "version": "1.1.0",
  "repository": {
    "url": "https://github.com/maddada/ai-devtools-vscode.git",
    "type": "git",
    "directory": ""
  },
  "license": "GPL-3.0",
  "publisher": "ai-devtools",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:aiDevtools.conversations"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-devtools",
          "title": "AI DevTools",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "ai-devtools": [
        {
          "id": "aiDevtools.conversations",
          "type": "webview",
          "name": "Conversations",
          "icon": "media/icon.svg",
          "contextualTitle": "AI DevTools"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "aiDevtools.conversations",
        "contents": "No conversations found for this project.\n\nStart a Claude Code or Codex conversation in this workspace to see it here.\n\n[Show All Projects](command:ai-devtools.toggleScope)\n[Refresh](command:ai-devtools.refresh)"
      }
    ],
    "commands": [
      {
        "command": "ai-devtools.openViewer",
        "title": "AI DevTools: Open Conversation Viewer"
      },
      {
        "command": "ai-devtools.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "ai-devtools.openConversation",
        "title": "Open Conversation"
      },
      {
        "command": "ai-devtools.toggleScope",
        "title": "AI DevTools: Toggle Scope (Current/All Projects)",
        "icon": "$(filter)"
      },
      {
        "command": "ai-devtools.toggleTimeFilter",
        "title": "AI DevTools: Toggle Time Filter (Recent/All)",
        "icon": "$(history)"
      },
      {
        "command": "ai-devtools.suspend",
        "title": "AI DevTools: Suspend (Release Memory)",
        "icon": "$(debug-pause)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ai-devtools.toggleTimeFilter",
          "when": "view == aiDevtools.conversations",
          "group": "navigation@1"
        },
        {
          "command": "ai-devtools.toggleScope",
          "when": "view == aiDevtools.conversations",
          "group": "navigation@2"
        },
        {
          "command": "ai-devtools.refresh",
          "when": "view == aiDevtools.conversations",
          "group": "navigation@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "bun run compile",
    "compile": "bun run build:css && bun run build:extension && bun run build:webview",
    "build": "bun run compile && npx vsce package --no-dependencies --no-update-package-json",
    "build:css": "bunx --bun @tailwindcss/cli -i src/webview/index.css -o dist/webview.css --minify",
    "build:extension": "bun run esbuild.extension.ts",
    "build:webview": "bun run esbuild.webview.ts",
    "watch": "bun run watch:css & bun run watch:extension & bun run watch:webview",
    "watch:css": "bunx --bun @tailwindcss/cli -i src/webview/index.css -o dist/webview.css --watch",
    "watch:extension": "bun run esbuild.extension.ts --watch",
    "watch:webview": "bun run esbuild.webview.ts --watch",
    "lint": "eslint src --ext ts,tsx"
  },
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@fontsource-variable/inter": "^5.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.561.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1",
    "shadcn": "^3.6.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.39.1",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.3"
  }
}
